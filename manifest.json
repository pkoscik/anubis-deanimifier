{
  "manifest_version": 3,
  "name": "Anubis Image Replacer",
  "version": "1.0",
  "description": "Replaces anime-themed images on Anubis-based sites with a picture of Robert Mak≈Çowicz.",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "js": ["src/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/robert.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}
